= form_for @salt do |f|
  - if @salt.errors.any?
    #error_explanation
      %h2= "#{pluralize(@salt.errors.count, "error")} prohibited this salt from being saved:"
      %ul
        - @salt.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :description
    = f.text_area :description
  .actions
    = f.submit 'Save'
